<section class="ui grid">
  <div class = "twelve wide column left aligned middle aligned">
    <h1> Search Results</h1>
  </div>
  <div class = "four wide column right aligned middle aligned">
    <a><button id="clear" class="ui button" style="margin-right: 1.8em" > Clear</button></a>
  </div>
</section>
<script type="text/javascript">
  document.getElementById('search').value="";
  $(document).ready(function() {
    $("#clear").click(function() {
      $("#searchForm").submit();
    });
  });
</script>
{{#each stocks}}
    <section class="ui raised segment" style="background-color: #f1f1f1">
        <div class="ui grid">
            <!---->
          <div class = "twelve wide column" >
            <h3 class="ui header ">{{'2. name'}}</h3>
            <div class = "ui grid">
              <div class = "four wide column left aligned middle aligned">
                Code: {{'1. symbol'}}
              </div>
              <div class = "four wide column left aligned middle aligned">
                Match Score: {{'9. matchScore'}}
              </div>
              <div class = "four wide column left aligned middle aligned">
                Market Open: {{'5. marketOpen'}}
              </div>
              <div class = "four wide column left aligned middle aligned">
                Market Close: {{'6. marketClose'}}
              </div>
            </div>
          </div>
            <div class = "four wide column right aligned middle aligned">
                    <a href="/dashboard/follow/{{'2. name'}}/{{'1. symbol'}}/{{'9. matchScore'}}/{{'5. marketOpen'}}/{{'6. marketClose'}}/{{../search}}" class="ui {{buttonColour}} button">
                      {{following}}
                    </a>
            </div>
        </div>
    </section>
{{/each}}

